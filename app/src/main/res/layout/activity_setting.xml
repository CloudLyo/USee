<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:fitsSystemWindows="true"
    tools:context="com.white.usee.app.activity.SettingActivity">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title"
        android:paddingRight="@dimen/px_thirdty_two">

        <ImageButton
            android:id="@+id/title_back"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_ninety_six"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:background="@drawable/iv_background"
            android:paddingBottom="@dimen/px_twenty_four"
            android:paddingLeft="@dimen/title_back_padLeft"
            android:paddingTop="@dimen/px_twenty_four"
            android:scaleType="fitCenter"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/title_back"
            android:text="设置"
            android:textColor="#f4f4f4"
            android:textSize="@dimen/sp_eighteen" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/toolbar"
        android:layout_marginLeft="@dimen/px_thirdty_two"
        android:layout_marginRight="@dimen/px_thirdty_two"
        android:background="#cfcfcf" />

    <RelativeLayout
        android:id="@+id/rl_clearCache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:padding="@dimen/px_thirdty_two">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="清空缓存"
            android:textColor="#816d64"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_cachennumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="0k"
            android:textColor="#b1b1b1"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl_clearCache"
        android:layout_marginLeft="@dimen/px_thirdty_two"
        android:layout_marginRight="@dimen/px_thirdty_two"
        android:background="#cfcfcf" />

    <RelativeLayout
        android:id="@+id/rl_checkversion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_clearCache"
        android:padding="@dimen/px_thirdty_two">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="版本检查"
            android:textColor="#816d64"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="2.0.8"
            android:textColor="#b1b1b1"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl_checkversion"
        android:layout_marginLeft="@dimen/px_thirdty_two"
        android:layout_marginRight="@dimen/px_thirdty_two"
        android:background="#cfcfcf" />

    <RelativeLayout
        android:id="@+id/rl_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_checkversion"
        android:padding="@dimen/px_thirdty_two">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="意见反馈"
            android:textColor="#816d64"
            android:textSize="16sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl_report"
        android:layout_marginLeft="@dimen/px_thirdty_two"
        android:layout_marginRight="@dimen/px_thirdty_two"
        android:background="#cfcfcf" />

    <RelativeLayout
        android:id="@+id/rl_about_me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_report"
        android:padding="@dimen/px_thirdty_two">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="关于我们"
            android:textColor="#816d64"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_phonenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:ellipsize="middle"
            android:text=""
            android:textColor="#b1b1b1"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl_about_me"
        android:layout_marginLeft="@dimen/px_thirdty_two"
        android:layout_marginRight="@dimen/px_thirdty_two"
        android:background="#cfcfcf" />

    <RelativeLayout
        android:id="@+id/rl_is_push"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_about_me"
        android:padding="@dimen/px_thirdty_two">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="消息推送"
            android:textColor="#816d64"
            android:textSize="16sp" />

        <ToggleButton
            android:id="@+id/toogle_is_push"
            android:layout_width="@dimen/px_ninety_six"
            android:layout_height="@dimen/px_forty_eight"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:button="@drawable/ios7_btn"
            android:checked="false"
            android:text=""
            android:textOff=""
            android:textOn="" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl_is_push"
        android:layout_marginLeft="@dimen/px_thirdty_two"
        android:layout_marginRight="@dimen/px_thirdty_two"
        android:background="#cfcfcf" />

    <RelativeLayout
        android:id="@+id/rl_danmu_speed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_is_push"
        android:padding="@dimen/px_thirdty_two">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="弹幕速度"
            android:textColor="#816d64"
            android:textSize="16sp" />

        <android.support.v7.widget.AppCompatSeekBar
            android:id="@+id/seekbar_speed_danmu"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:progress="50"/>
    </RelativeLayout>

    <View
        android:background="#cfcfcf"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl_danmu_speed" />


    <View
        android:id="@+id/view_mesh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:background="@color/view_mesh"
        android:visibility="gone" />
</RelativeLayout>
