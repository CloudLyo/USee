<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:background="#e52471b2"
                android:visibility="gone"
                xmlns:tools="http://schemas.android.com/tools"
                android:padding="@dimen/px_thirdty_two"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:showIn="@layout/activity_talk2">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:id="@+id/rl_shareTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textColor="#f4f4f4"
                    android:text="分享到"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"/>

            <View
                    android:layout_centerVertical="true"
                    android:layout_width="128dp"
                    android:background="#f4f4f4"
                    android:layout_height="1dp"/>

            <View
                    android:layout_centerVertical="true"
                    android:layout_width="128dp"
                    android:background="#f4f4f4"
                    android:layout_alignParentRight="true"
                    android:layout_height="1dp"/>
        </RelativeLayout>

        <LinearLayout
                android:id="@+id/share_weixin"
                android:layout_marginTop="@dimen/px_thirdty_two"
                android:layout_below="@id/rl_shareTo"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_width="@dimen/px_ninety_six"
                    android:scaleType="fitCenter"
                    android:src="@drawable/weixin"
                    android:layout_height="@dimen/px_ninety_six"/>

            <TextView
                    android:text="微信好友"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/main_bg"
                    android:textSize="12sp"
                    android:layout_marginTop="@dimen/px_twenty_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
                android:layout_toRightOf="@id/share_weixin"
                android:layout_marginLeft="25dp"
                android:id="@+id/share_weixin_friends"
                android:layout_marginTop="@dimen/px_thirdty_two"
                android:layout_below="@id/rl_shareTo"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_width="@dimen/px_ninety_six"
                    android:scaleType="fitCenter"
                    android:src="@drawable/weixin_friends"
                    android:layout_height="@dimen/px_ninety_six"/>

            <TextView
                    android:layout_gravity="center_horizontal"
                    android:text="朋友圈"
                    android:textColor="@color/main_bg"
                    android:textSize="12sp"
                    android:layout_marginTop="@dimen/px_twenty_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/share_qq"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/px_thirdty_two"
                android:layout_below="@id/rl_shareTo"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_width="@dimen/px_ninety_six"
                    android:scaleType="fitCenter"
                    android:src="@drawable/qq"
                    android:layout_height="@dimen/px_ninety_six"/>

            <TextView
                    android:layout_gravity="center_horizontal"
                    android:text="QQ好友"
                    android:textColor="@color/main_bg"
                    android:textSize="12sp"
                    android:layout_marginTop="@dimen/px_twenty_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/share_weibo"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/px_thirdty_two"
                android:layout_below="@id/rl_shareTo"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_width="@dimen/px_ninety_six"
                    android:scaleType="fitCenter"
                    android:src="@drawable/weibo"
                    android:layout_height="@dimen/px_ninety_six"/>

            <TextView
                    android:layout_gravity="center_horizontal"
                    android:text="新浪微博"
                    android:textColor="@color/main_bg"
                    android:textSize="12sp"
                    android:layout_marginTop="@dimen/px_twenty_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/share_qq_friends"
                android:layout_toLeftOf="@id/share_weibo"
                android:layout_marginRight="25dp"
                android:layout_marginTop="@dimen/px_thirdty_two"
                android:layout_below="@id/rl_shareTo"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_width="@dimen/px_ninety_six"
                    android:scaleType="fitCenter"
                    android:src="@drawable/qq_friends"
                    android:layout_height="@dimen/px_ninety_six"/>

            <TextView
                    android:layout_gravity="center_horizontal"
                    android:text="QZone"
                    android:textColor="@color/main_bg"
                    android:textSize="12sp"
                    android:layout_marginTop="@dimen/px_twenty_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>